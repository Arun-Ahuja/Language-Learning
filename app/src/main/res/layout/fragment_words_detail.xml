<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.sindhilearning.fragments.WordsDetail">
   <android.support.v7.widget.Toolbar
       android:id="@+id/toolbar"
       android:layout_width="match_parent"
       android:layout_height="?attr/actionBarSize"
       android:background="@drawable/moen_jo_daro3new"
       app:layout_scrollFlags="scroll|enterAlways"
       app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="Learn Sindhi"
          android:textColor="@android:color/white"
          android:textSize="24sp"
          android:textStyle="bold" />
   </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:elevation="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consonants"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



   <ListView
       android:id="@+id/lv_words"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:divider="@android:color/darker_gray"
       android:dividerHeight="5dp"
       android:padding="5dp"
       android:background="@android:color/darker_gray"
       tools:listitem="@layout/row_design_words"
       >





   </ListView>

</LinearLayout>
